foo() {

  
  if [[ -n "${args['choices']}" ]]; then
    if [[ ! "(one two three)" =~ ${args['choices']} ]]; then
      printf "\e[31m%s\e[33m%s\e[31m%s\e[33m%s\e[31m\e[0m\n\n" "Invalid option for " "choices" ": " "${args['choices']}" >&2
