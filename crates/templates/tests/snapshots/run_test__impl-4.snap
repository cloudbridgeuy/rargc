---
source: crates/templates/tests/run_test.rs
description: Run function with multiple commands and a default value
expression: output
---
run() {
  declare -A args=()
  declare -A deps=()
  declare -a input=()
  normalize_input "$@"
  parse_arguments "${input[@]}"
  # Rule `no-first-option-help`: Render the global or command usage if the `-h|--help` option is
  #                              is provided anywhere on the command, not just as the first option.
  #                              Handling the case where no action was selected.
  if [[ -n "${args['--help']}" ]] && [[ -z "$action" ]]; then
    usage
    exit 0
  fi
  # Call the right command action
  case "$action" in
    "bar")
      bar
      exit
      ;;
    "baz")
      baz
      exit
      ;;
    "foo")
      foo
      exit
      ;;
  esac
}

