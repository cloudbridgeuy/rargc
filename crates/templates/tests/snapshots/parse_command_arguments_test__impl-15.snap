---
source: crates/templates/tests/parse_command_arguments_test.rs
description: Parse commands with one multiple positional arguments
expression: output
---
parse_foo_arguments() {
  while [[ $# -gt 0 ]]; do
    case "${1:-}" in
      -h | --help)
        foo_usage
        exit
        ;;
      *)
        break
        ;;
    esac
  done

  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in
      -?*)
        printf "invalid option: %s\n" "$key" >&2
        exit 1
        ;;
      *)
        if [[ -z ${args['foo']+x} ]]; then
          args['foo']=$key
          shift
        else
          args['foo']="${args['foo']} \"$key\""
          shift
        fi
        ;;
    esac
  done
}

